<UserControl x:Class="HPlayer.PlayerList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HPlayer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="main">
        <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" >
            <StackPanel x:Name="ListContainer" Margin="0" VerticalAlignment="Top"/>
        </ScrollViewer>
        <local:PlayerScrollBar x:Name="Scroll" HorizontalAlignment="Right" Margin="0" Width="12" Foreground="{x:Null}" ScrollBackground="#FF7C7C7C" MaxValue="150" MinimumHeight="0" Background="White" />
    </Grid>
</UserControl>
